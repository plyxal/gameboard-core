{
  "debug": {
    "path": "config/debug.config",
    "config": {
      "enabled": true
    }
  },

  "restify": {
    "path": "config/restify.config",
    "config": {
      "name": "system-core",
      "version": "0.0.1",
      "port": 3000,
      "useCORS": true
    }
  },

  "sequelize": {
    "path": "config/sequelize.config",
    "config": {
      "database": "plyxal",
      "username": "plyxal",
      "password": "plyxal",
      "host": "127.0.0.1",
      "dialect": "postgres"
    }
  },

  "buttonDeamon": {
    "path": "daemon/button.daemon",
    "config": {
      "enabled": true,
      "gpioId": 499
    }
  },

  "systemController": {
    "path": "controller/system.controller"
  },

  "userController": {
    "path": "controller/user.controller"
  },

  "gameController": {
    "path": "controller/game.controller"
  },

  "systemService": {
    "path": "service/system.service",
    "config": {
      "suspendResume": true,
      "killApp": true
    }
  },

  "userService": {
    "path": "service/user.service"
  },

  "gameService": {
    "path": "service/game.service"
  },

  "userDao": {
    "path": "dao/user.dao"
  },

  "gameDao": {
    "path": "dao/game.dao"
  },

  "userModel": {
    "path": "model/user.model",
    "config": {
      "table": "users"
    }
  },

  "gameModel": {
    "path": "model/game.model",
    "config": {
      "table": "games"
    }
  },

  "seed": {
    "path": "service/seed.service",
    "config": {
      "seedGames": false
    }
  }
}